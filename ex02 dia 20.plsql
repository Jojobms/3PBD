1.
SELECT Nome 
FROM EMPREGADO 
WHERE Depto = (SELECT Numero FROM DEPARTAMENTO WHERE Nome = 'Engenharia Civil');
2.
SELECT P.Numero AS Numero_Projeto, D.Numero AS Numero_Departamento, E.Nome AS Nome_Gerente
FROM PROJETO P
JOIN DEPARTAMENTO_PROJETO DP ON P.Numero = DP.Numero_Projeto
JOIN DEPARTAMENTO D ON DP.Numero_Depto = D.Numero
JOIN EMPREGADO E ON D.RG_Gerente = E.RG
WHERE P.Localizacao = 'SÃ£o Paulo';
3.
SELECT e.Nome
FROM EMPREGADO e
JOIN EMPREGADO_PROJETO ep ON e.RG = ep.RG_Empregado
WHERE ep.Numero_Projeto IN (
    SELECT dp.Numero_Projeto
    FROM DEPARTAMENTO_PROJETO dp
    WHERE dp.Numero_Depto = 3
)
GROUP BY e.Nome
HAVING COUNT(DISTINCT ep.Numero_Projeto) = (
    SELECT COUNT(*)
    FROM DEPARTAMENTO_PROJETO
    WHERE Numero_Depto = 3
);

4. 
SELECT DISTINCT P.Numero
FROM PROJETO P
JOIN DEPARTAMENTO_PROJETO DP ON P.Numero = DP.Numero_Projeto
JOIN DEPARTAMENTO D ON DP.Numero_Depto = D.Numero
LEFT JOIN EMPREGADO_PROJETO EP ON P.Numero = EP.Numero_Projeto
LEFT JOIN EMPREGADO E ON (EP.RG_Empregado = E.RG OR D.RG_Gerente = E.RG)
WHERE E.Nome = 'Fernando';

5.

SELECT Nome
FROM EMPREGADO
WHERE RG NOT IN (SELECT RG_Responsavel FROM DEPENDENTES);


6.

SELECT E.Nome
FROM EMPREGADO E
WHERE E.RG IN (SELECT D.RG_Gerente FROM DEPARTAMENTO D)
AND E.RG IN (SELECT RG_Responsavel FROM DEPENDENTES);


